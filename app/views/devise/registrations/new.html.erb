<%= render "shared/header" %>

<div class="registration">

  <div class="registration-title">
    <h2 class="registration-title-text">新規登録</h2>
  </div>

  <div class="registration-form">

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :お名前 %><br />
      <%= f.text_field :name, class:"input-default", autofocus: true, placeholder: "例）鈴木　太郎" %>
    </div>
    
    <div class="field">
      <%= f.label :"カナ(全角)" %><br />
      <%= f.text_field :name_reading, class:"input-default", placeholder: "例）スズキ　タロウ" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, class:"input-default", autocomplete: "email" %>
    </div>
    
    <div class="field">
      <%= f.label :"電話番号 (ハイフンなし)"%><br />
      <%= f.text_field :phone_number, class:"input-default" %>
    </div>
    
    <div class="field">
      <%= f.label :生年月日 %><br />
      <div class="input-birth-wrap">
        <%= raw sprintf(
                    f.date_select(
                      :birth_date,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'---',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %><br />
      <% if @minimum_password_length %>
        <em>( <%= @minimum_password_length %>文字以上, 半角英数字それぞれ1文字以上 )</em>
      <% end %><br />
      <%= f.password_field :password, class:"input-default", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, class:"input-default", autocomplete: "new-password" %>
    </div>

    <div class="registration-btn">
      <%= f.submit "登録" , class:"registration-blue-btn"%>
    </div>
    <% end %>

  </div>

  <div class="back-btn">
    <%= link_to "トップに戻る", root_path, class:"back-btn-text"%>
  </div>
  <%# <%= render "devise/shared/links" %> 

</div>


<%= render "shared/footer" %>
