<%= render "shared/header" %>

<div class="sessions-wrap">

  <div class="sessions-title">
    <h2 class="sessions-title-text">ログイン</h2>
  </div>

  <div class="sessions-form">
    <%= form_with model:@user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :記憶する %>
        </div>
      <% end %>

      <div class="sessions-btn">
      <%= f.submit "ログイン" , class:"sessions-blue-btn"%>
    </div>
    <% end %>

  </div>

  <div class="back-btn">
    <%= link_to "トップに戻る", root_path, class:"back-btn-text"%>
  </div>

</div>

