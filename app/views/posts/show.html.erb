<div class="post-show">
  <div class="show-title">
    <%= @post.title %>
  </div>
  <div class="show-date">
   <%= @post.updated_at.strftime('%Y/%m/%d') %>
  </div>
  <div class="show-image">
    <%= image_tag @post.image, class: "show-post-image" %>
  </div>
  <div class="show-text">
    <%= @post.text %>
  </div>
  <% if current_user.try(:admin?) %>
    <div class="show-admin-btn">
      <%= link_to "編集", edit_post_path(@post.id), class: "show-btn" %>
      <%= link_to "削除", post_path(@post.id), method: :delete, class: "show-btn" ,data: {confirm: "削除しますか？"} %>
    </div>
  <% end %>
</div>
