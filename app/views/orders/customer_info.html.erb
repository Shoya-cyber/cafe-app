<%= render "shared/header" %>
<div class="customer-confirm-page">

  <h2 class="customer-confirm-title">
    お客様情報入力
  </h2>

  <%= form_with model: @order, url: "#", id: "charge-form", class: 'transaction-form-wrap', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="customer-confirm-wrap">
    <%# クレジットカード %>
    <div class="customer-confirm-wrap-half">
      <h3 class="info-title">クレジットカード</h3>
      <div class="credit-card-form">
        <div class="form-group">
          <div class="available-card">
            <%= f.label :number, "カード番号" %>
            <%= image_tag 'card-visa.gif', class: "card-logo", size: '35x25' %>
            <%= image_tag 'card-mastercard.gif', class: "card-logo", size: '35x25' %>
            <%= image_tag 'card-jcb.gif', class: "card-logo", size: '35x25' %>
            <%= image_tag 'card-amex.gif', class: "card-logo", size: '35x25' %>
          </div>
          <%= f.text_field :number, class: "input-card-form", id: "card-number", placeholder: "カード番号（半角英数字）", maxlength: "16" %>
        </div>
        <div class="form-group">
          <p>有効期限</p>
          <div class="input-expiration-date-wrap">
            <%= f.text_area :exp_month, class: "input-expiration-date", id: "card-exp-month", placeholder: "例)3" %>
            <p>月</p>
            <%= f.text_area :exp_year, class: "input-expiration-date", id: "card-exp-year", placeholder: "例)25" %>
            <p>年</p>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :cvc, "セキュリティコード" %><br>
          <%= f.text_field :cvc, class: "input-card-form", id: "card-cvc", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4" %>
        </div>  
      </div>
    </div>
    <%# クレジットカード ここまで %>

    <%# お届け先 %>
    <div class="customer-confirm-wrap-half">

      <h3 class="info-title">お届け先</h3>
      <div class="address-wrap">
        <div class="form-group">
          <%= f.label :postal_codo, "郵便番号(ハイフンなし)" %><br>
          <%= f.text_field :postal_codo, class: "input-postalcode", id: "postal-code", placeholder: "例）1234567", maxlength: "7" %>
        </div>
        <div class="form-group">
          <%= f.label :prefecture_id, "都道府県" %><br>
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class: "prefecture-select", id: "prefecture" }) %>
        </div>
        <div class="form-group">
          <%= f.label :city, "市区町村" %><br>
          <%= f.text_field :city, class: "input-address", id: "city", placeholder: "例）〇〇市〇〇区" %>
        </div>
        <div class="form-group">
          <%= f.label :house_number, "番地" %><br>
          <%= f.text_field :house_number, class: "input-address", id: "house-number", placeholder: "例）〇〇1-2-3" %>
        </div>
        <div class="form-group">
          <%= f.label :building_name, "建物名" %><br>
          <%= f.text_field :building_name, class: "input-address", id: "building", placeholder: "任意" %>
        </div>
      
      </div>
    </div>
    <%# お届け先 ここまで %>
  </div>
  <div class="customer-info-btn-box">
    <%= f.submit "確認へ", class: "customer-info-btn" %>
  </div>



  <% end %>
</div>
<%= render "shared/footer" %>