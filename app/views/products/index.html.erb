<%= render "shared/header" %>
<div class="products-main-page">
  
  <div class="products-main-title-wrap">
    <h2 class="products-main-title">
      Online Store
    </h2>
    <% unless user_signed_in? %>
      <p>会員登録／ログインしていただくとご購入いただけます</p>
    <% end %>
  </div>
   

  <div class="product-box">
    <%= render partial:"product", collection: @products %>
  </div>

  <% if user_signed_in? && !(@cart.blank?) %>
    <% @sub_total = 0 %>
    <% @cart.each do |cart| %>
      <% @sub_total += cart[:quantity].to_i %>
    <% end %>
    <div class="cart-icon-btn-box">
      <% unless (@sub_total == 0) %>
        <div class="cart-quantity"> 
          <%= @sub_total %>
        </div>
      <% end %>
      <div class="cart-icon-btn">
        <span class="cart-icon-text">カートを見る</span>
        <%= link_to image_tag('cart.png', size: '185x50', class: "cart-icon-image"), carts_show_path   %>
      </div>
    </div>
  <% end %>
</div>
<%= render "shared/footer" %>